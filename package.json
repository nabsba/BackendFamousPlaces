{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cpx": "^1.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2",
    "graphql": "^16.9.0",
    "init": "^0.1.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.7",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon dist/server.js ",
    "build": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "format": "yarn prettier:fix && yarn lint:fix",
    "seed": "ts-node src/famousPlace/services/seed.ts",
    "devts": "npx copyfiles -u 1 'src/prisma/**/*' dist/ && nodemon --exec ts-node src/server.ts",
    "prismaMigrate": "yarn prisma migrate dev --schema=./src/prisma/schema.prisma",
    "prismaGenerate": "yarn prisma generate --schema=./src/prisma/schema.prisma",
    "prismaPush": "yarn prisma db push --schema=./src/prisma/general/schema.prisma"
  }
}
