{
  "compilerOptions": {
    "target": "ES2020",                    // The JavaScript version to compile to
    "module": "CommonJS",                  // Use CommonJS module system (for Node.js)
    "strict": true,                        // Enable strict type-checking
    "esModuleInterop": true,               // Allow importing non-ESM modules
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                    // Output directory for compiled JavaScript files
    "rootDir": "./src",                    // Directory containing your TypeScript files
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],               // Include all .ts files in the src folder
  "exclude": ["node_modules"]               // Exclude the node_modules folder
}
